   keywords = {Bay of Mont-Saint-Michel,Feeding activity,Reefs,Suspension-feeders,Trophic capacity,Tubiculous polychaete},
   title = {Feeding response of the polychaete Sabellaria alveolata (Sabellariidae) to changes in seston concentration},
   volume = {376},
   year = {2009},
