   doi = {10.3389/fmars.2022.871799},
   issn = {2296-7745},
   journal = {Frontiers in Marine Science},
   month = {7},
   title = {Spatially Explicit Seagrass Extent Mapping Across the Entire Mediterranean},
   volume = {9},
