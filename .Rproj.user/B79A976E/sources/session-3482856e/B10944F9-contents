   pages = {115-126},
   title = {Universal chlorophyll equations for estimating chlorophylls a, b, c, and d and total chlorophylls in natural assemblages of photosynthetic organisms using acetone, methanol, or ethanol solvents},
   volume = {46},
   year = {2008},
