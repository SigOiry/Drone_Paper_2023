   issue = {18},
   journal = {Int J Environ Res Public Health},
   keywords = {*Estuaries,*Water Microbiology,*Water Quality,Escherichia coli/*isolation & purification,Feces/microbiology,Geologic Sediments/*microbiology,Humans,Risk Assessment},
