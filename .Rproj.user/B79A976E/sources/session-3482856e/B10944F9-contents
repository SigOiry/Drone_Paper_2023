   journal = {Sci Total Environ},
   keywords = {*Ecosystem,Animals,Conservation of Natural Resources,Environmental Monitoring,Environmental Pollution/analysis,European Union,Fishes/physiology,Geography,Invertebrates/physiology,Reference Values,Rivers/*chemistry},
