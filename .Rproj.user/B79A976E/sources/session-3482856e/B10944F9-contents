   issue = {1},
   journal = {PLoS One},
   keywords = {*Carbohydrate Metabolism,*Genome,*Models, Biological,Carbon Dioxide/metabolism,Diatoms/*metabolism},
   note = {Kroth, Peter G<br/>Chiovitti, Anthony<br/>Gruber, Ansgar<br/>Martin-Jezequel, Veronique<br/>Mock, Thomas<br/>Parker, Micaela Schnitzler<br/>Stanley, Michele S<br/>Kaplan, Aaron<br/>Caron, Lise<br/>Weber, Till<br/>Maheswari, Uma<br/>Armbrust, E Virginia<br/>Bowler, Chris<br/>P50 ES012762/ES/NIEHS NIH HHS/<br/>PLoS One. 2008 Jan 9;3(1):e1426. doi: 10.1371/journal.pone.0001426.},
