   journal = {Marine Environmental Research},
   keywords = {Aquaculture,Climate warming,Coastal waters,Crassostrea gigas,Oyster larvae,Reproductive cycle,Settlement,Turbidity},
   title = {Rising water temperatures, reproduction and recruitment of an invasive oyster, Crassostrea gigas, on the French Atlantic coast},
   volume = {69},
   year = {2010},
