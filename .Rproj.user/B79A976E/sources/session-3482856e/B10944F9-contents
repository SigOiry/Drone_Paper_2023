   keywords = {Cyanobacteria/isolation & purification/*physiology,Diatoms/isolation & purification/*physiology/ultra,Microscopy, Electron, Scanning,Seawater,Symbiosis/*physiology},
   note = {Brehm, Ulrike<br/>Krumbein, Wolfgang E<br/>Palinska, Katarzyna A<br/>Germany<br/>Naturwissenschaften. 2003 Mar;90(3):136-40. Epub 2003 Feb 12.},
