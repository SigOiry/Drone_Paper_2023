@article{Adl2012,
   abstract = {This revision of the classification of eukaryotes, which updates that of Adl et al. [J. Eukaryot. Microbiol. 52 (2005) 399], retains an emphasis on the protists and incorporates changes since 2005 that have resolved nodes and branches in phylogenetic trees. Whereas the previous revision was successful in re-introducing name stability to the classification, this revision provides a classification for lineages that were then still unresolved. The supergroups have withstood phylogenetic hypothesis testing with some modifications, but despite some progress, problematic nodes at the base of the eukaryotic tree still remain to be statistically resolved. Looking forward, subsequent transformations to our understanding of the diversity of life will be from the discovery of novel lineages in previously under-sampled areas and from environmental genomic information.},
   author = {S M Adl and A G Simpson and C E Lane and J Lukes and D Bass and S S Bowser and M W Brown and F Burki and M Dunthorn and V Hampl and A Heiss and M Hoppenrath and E Lara and L Le Gall and D H Lynn and H McManus and E A Mitchell and S E Mozley-Stanridge and L W Parfrey and J Pawlowski and S Rueckert and R S Shadwick and C L Schoch and A Smirnov and F W Spiegel},
   doi = {10.1111/j.1550-7408.2012.00644.x},
   edition = {2012/10/02},
   isbn = {1550-7408 (Electronic)
1066-5234 (Linking)},
   issue = {5},
   journal = {J Eukaryot Microbiol},
   keywords = {Eukaryota/*classification/cytology/physiology,Genome,Phylogeny,Terminology as Topic},
   note = {Adl, Sina M<br/>Simpson, Alastair G B<br/>Lane, Christopher E<br/>Lukes, Julius<br/>Bass, David<br/>Bowser, Samuel S<br/>Brown, Matthew W<br/>Burki, Fabien<br/>Dunthorn, Micah<br/>Hampl, Vladimir<br/>Heiss, Aaron<br/>Hoppenrath, Mona<br/>Lara, Enrique<br/>Le Gall, Line<br/>Lynn, Denis H<br/>McManus, Hilary<br/>Mitchell, Edward A D<br/>Mozley-Stanridge, Sharon E<br/>Parfrey, Laura W<br/>Pawlowski, Jan<br/>Rueckert, Sonja<br/>Shadwick, Rueckert S<br/>Schoch, Conrad L<br/>Smirnov, Alexey<br/>Spiegel, Frederick W<br/>ZIH LM200888-01/Intramural NIH HHS/<br/>J Eukaryot Microbiol. 2012 Sep;59(5):429-93. doi: 10.1111/j.1550-7408.2012.00644.x.},
