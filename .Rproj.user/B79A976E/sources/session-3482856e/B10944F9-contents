   pages = {967-976},
   pmid = {27041615},
   title = {The Role of Nitric Oxide in Diatom Adhesion in Relation to Substratum Properties(1)},
   volume = {44},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/27041615},
