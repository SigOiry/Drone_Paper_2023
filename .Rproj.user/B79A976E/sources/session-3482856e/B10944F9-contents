@article{Aguirre2018,
   abstract = {The evolutionary causes for generation of nano and microstructured silica by photosynthetic algae are not yet deciphered. Diatoms are single photosynthetic algal cells populating the oceans and waters around the globe. They generate a considerable fraction (20-30%) of all oxygen from photosynthesis, and 45% of total primary production of organic material in the sea. There are more than 100,000 species of diatoms, classified by the shape of the glass cage in which they live, and which they build during algal growth. These glass structures have accumulated for the last 100 million of years, and left rich deposits of nano/microstructured silicon oxide in the form of diatomaceous earth around the globe. Here we show that reflection of ultraviolet light by nanostructured silica can protect the deoxyribonucleic acid (DNA) in the algal cells, and that this may be an evolutionary cause for the formation of glass cages.},
   author = {L E Aguirre and L Ouyang and A Elfwing and M Hedblom and A Wulff and O Inganas},
   doi = {10.1038/s41598-018-21810-2},
   isbn = {2045-2322 (Electronic)
2045-2322 (Linking)},
   issue = {1},
   journal = {Sci Rep},
   note = {Aguirre, Luis Ever<br/>Ouyang, Liangqi<br/>Elfwing, Anders<br/>Hedblom, Mikael<br/>Wulff, Angela<br/>Inganas, Olle<br/>eng<br/>England<br/>2018/03/25 06:00<br/>Sci Rep. 2018 Mar 23;8(1):5138. doi: 10.1038/s41598-018-21810-2.},
   pages = {5138},
   pmid = {29572445},
   title = {Diatom frustules protect DNA from ultraviolet light},
   volume = {8},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/29572445},
   year = {2018},
