   pages = {318-328},
   pmid = {20082028},
   title = {Sediment and water nutrients and microalgae in a coastal shallow lagoon, Ria Formosa (Portugal): Implications for the water framework directive},
   volume = {12},
   url = {https://pubs.rsc.org/en/content/articlehtml/2010/em/b909429f},
