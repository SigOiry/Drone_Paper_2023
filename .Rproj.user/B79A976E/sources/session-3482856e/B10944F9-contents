   publisher = {Elsevier},
   title = {Sources of organic matter for flatfish juveniles in coastal and estuarine nursery grounds: A meta-analysis for the common sole (Solea solea) in contrasted systems of Western Europe},
   volume = {75},
   year = {2013},
