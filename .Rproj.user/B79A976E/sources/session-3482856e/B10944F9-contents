@article{Laviale2015,
   abstract = {Although estuarine microphytobenthos (MPB) is frequently exposed to excessive light and temperature conditions, little is known on their interactive effects on MPB primary productivity. Laboratory and in situ experiments were combined to investigate the short-term joint effects of high light (HL) and high temperature (37 degrees C versus 27 degrees C) on the operating efficiency of photoprotective processes [vertical migration versus non-photochemical quenching (NPQ)] exhibited by natural benthic diatom communities from two intertidal flats in France (FR) and Portugal (PT). A clear latitudinal pattern was observed, with PT biofilms being more resistant to HL stress, regardless the effect of temperature, and displaying a lower relative contribution of vertical migration to photoprotection and a stronger NPQ in situ. However, higher temperature leads to comparable effects, with photoinhibition increasing to about three times (i.e. from 3% to 10% and from 8% to 22% in PT and FR sites respectively). By using a number of methodological novelties in MPB research (lipid peroxidation quantification, Lhcx proteins immunodetection), this study brings a physiological basis to the previously reported depression of MPB photosynthetic productivity in summer. They emphasize the joint role of temperature and light in limiting, at least transiently (i.e. during emersion), MPB photosynthetic activity in situ.},
   author = {M Laviale and A Barnett and J Ezequiel and B Lepetit and S Frankenbach and V Meleder and J Serodio and J Lavaud},
   doi = {10.1111/1462-2920.12728},
   edition = {2014/12/05},
   isbn = {1462-2920 (Electronic)
1462-2912 (Linking)},
   issue = {10},
   journal = {Environ Microbiol},
   note = {Laviale, Martin<br/>Barnett, Alexandre<br/>Ezequiel, Joao<br/>Lepetit, Bernard<br/>Frankenbach, Silja<br/>Meleder, Vona<br/>Serodio, Joao<br/>Lavaud, Johann<br/>England<br/>Environ Microbiol. 2015 Oct;17(10):3662-77. doi: 10.1111/1462-2920.12728. Epub 2015 Feb 3.},
   pages = {3662-3677},
   pmid = {2015},
   title = {Response of intertidal benthic microalgal biofilms to a coupled light-temperature stress: evidence for latitudinal adaptation along the Atlantic coast of Southern Europe},
   volume = {17},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/25471657},
   year = {2015},
}
