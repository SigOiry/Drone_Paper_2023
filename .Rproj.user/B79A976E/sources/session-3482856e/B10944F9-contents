   issn = {00188158},
   issue = {1},
   journal = {Hydrobiologia},
   keywords = {Biological quality elements,Methods of quality assessment,Response to human pressures,Uncertainty,Water framework directive},
   pages = {213-229},
   title = {Transitional and coastal waters ecological status assessment: Advances and challenges resulting from implementing the European Water Framework Directive},
   volume = {704},
   year = {2013},
