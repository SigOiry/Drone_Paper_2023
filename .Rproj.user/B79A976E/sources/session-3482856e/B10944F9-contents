   keywords = {Nutrient dynamics,Resuspension,Scandinavia,Sedimentation},
   month = {1},
   pages = {66-77},
   title = {Nutrient (P, N) dynamics in the Southwestern Kattegat, Scandinavia: Sedimentation and resuspension effects},
   volume = {29},
   year = {1997},
