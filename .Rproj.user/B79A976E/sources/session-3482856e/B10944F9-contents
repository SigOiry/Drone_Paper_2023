   keywords = {Inundation,Microphytobenthos,NDVI,Remote sensing,Spatial scales,Synchrony},
   pages = {338-351},
   title = {Spatial synchrony in intertidal benthic algal biomass in temperate coastal and estuarine ecosystems},
   volume = {13},
   year = {2010},
