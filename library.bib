   journal = {Ecological Indicators},
   keywords = {Earth Observation,Ecosystem monitoring,Interannual variability,Recovery,Water Framework Directive,Zostera noltei,Zostera noltii},
   month = {11},
   pages = {108033},
   publisher = {Elsevier},
   title = {Decadal increase in the ecological status of a North-Atlantic intertidal seagrass meadow observed with multi-mission satellite time-series},
   volume = {130},
   url = {https://linkinghub.elsevier.com/retrieve/pii/S1470160X21006981},
   year = {2021},
