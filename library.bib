@Article{Douay2022,
AUTHOR = {Douay, Florian and Verpoorter, Charles and Duong, Gwendoline and Spilmont, Nicolas and Gevaert, François},
TITLE = {New Hyperspectral Procedure to Discriminate Intertidal Macroalgae},
JOURNAL = {Remote Sensing},
VOLUME = {14},
YEAR = {2022},
NUMBER = {2},
ARTICLE-NUMBER = {346},
